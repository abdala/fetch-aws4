{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/example.ts",
    "src/fetch.test.ts"
  ]
}